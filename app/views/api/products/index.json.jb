@products.map do |product|
  {
    name: product.name, 
    price: product.price,
    description: product.description,
    id: product.id,
    is_discounted: product.is_discounted?,
    tax: product.tax,
    instock: product.instock,
    total: product.total,
    supplier_name: product.supplier,
    images: product.images
  }
end